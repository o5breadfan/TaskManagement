@model TaskManagement.Models.DoTask
@{Layout=null;}

<div class="row">
    <div class="col-md-12">
        <form id="AjaxForm" asp-action="CreateOrEditTask" asp-route-id="@Model.Id" onsubmit="return ajaxForm(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ParentId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @Html.TextAreaFor(m => m.Description, 2, 20, new { @class = "form-control" })
                @*<input asp-for="Description" class="form-control" />*@
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Executors" class="control-label"></label>
                <input asp-for="Executors" class="form-control" />
                <span asp-validation-for="Executors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateRegister" class="control-label"></label>
                <input asp-for="DateRegister" class="form-control" />
                <span asp-validation-for="DateRegister" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                @Html.DropDownListFor(m => m.Status, Html.GetEnumSelectList(typeof(Status)), new { @class = "form-select" })
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group py-2">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <input type="submit" class="btn btn-primary" value="Save changes" />
            </div>
        </form>
    </div>
</div>



