@model TaskManagement.ViewModels.CreateTaskViewModel
@{Layout = null;}

<div asp-validation-summary="ModelOnly" class="text-danger">
</div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    @Html.TextAreaFor(m => m.Description, 2, 20, new { @class = "form-control" })
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Executors" class="control-label"></label>
    <input asp-for="Executors" class="form-control" />
    <span asp-validation-for="Executors" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="PlanTime" class="control-label"></label>
    <input asp-for="PlanTime" type="number" min="0" max="10" pattern="[0-9]+(,\d{1})" class="form-control" />
    <span asp-validation-for="PlanTime" class="text-danger"></span>
</div>
<div class="form-group py-2">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
    <input type="submit" class="btn btn_green" value="Сохранить" />
</div>
